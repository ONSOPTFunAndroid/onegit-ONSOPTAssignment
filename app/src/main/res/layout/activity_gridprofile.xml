<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_gridprofile_godhyoshin"
        android:layout_width="130dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/parkhyoshin" />

    <TextView
        android:id="@+id/txt_gridprofile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:text="Title"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/img_gridprofile_godhyoshin"
        app:layout_constraintTop_toBottomOf="@+id/img_gridprofile_godhyoshin" />

    <TextView
        android:id="@+id/txt_gridprofile_subtiltle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="SubTitle"
        app:layout_constraintStart_toStartOf="@id/txt_gridprofile_title"
        app:layout_constraintTop_toBottomOf="@id/txt_gridprofile_title" />

</androidx.constraintlayout.widget.ConstraintLayout>